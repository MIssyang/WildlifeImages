<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/events_layout_text"
            android:textSize="20dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:paddingLeft="2dp" >

            <TextView
                android:id="@+id/events_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/events_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="16dp"
                android:textStyle="bold" />
        </FrameLayout>

        <Gallery
            android:id="@+id/events_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:spacing="10dp"
            android:unselectedAlpha="0.5" >
        </Gallery>

        <SeekBar
            android:id="@+id/events_seekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxHeight="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:thumb="@drawable/wildlifeimages_logo"
            android:visibility="gone" />
    </LinearLayout>

    <ImageButton
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_menu_today"
        android:background="@android:color/background_light"
        android:onClick="addEventToCalendar" />

</FrameLayout>