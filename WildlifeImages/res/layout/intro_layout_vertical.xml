<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <WebView
      android:id="@+id/intro"
      android:layout_height="fill_parent"
      android:layout_width="fill_parent"
      android:layout_weight="1"
      />
    
    <HorizontalScrollView
      android:id="@+id/intro_sidebar"
      android:layout_height="fill_parent"
      android:layout_width="fill_parent"
      android:layout_weight="7"
      >
      <LinearLayout
          	android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="horizontal">
	      <Button
			android:id="@+id/intro_sidebar_intro"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="About Us" />
	      <Button
			android:id="@+id/intro_sidebar_donations"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="Donate" />
	      <Button
			android:id="@+id/intro_sidebar_events"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="Events" />
	      <Button
			android:id="@+id/intro_sidebar_photos"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="Photos" />
	      <Button
			android:id="@+id/intro_sidebar_app"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="About This App" />
	      <Button
			android:id="@+id/intro_sidebar_exhibitlist"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="Exhibit List" />
	      <Button
			android:id="@+id/intro_sidebar_map"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:onClick="introProcessSidebar"
			android:text="Map" />
      </LinearLayout>
     </HorizontalScrollView>

</LinearLayout>